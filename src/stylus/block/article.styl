$article-margin = 50px

.article
  &__wrapper
    margin auto
    width 600px

.article-head-block
  position relative
  width 100%
  height 100vh
  text-align center
  vertical-align middle

  &__image
    background-image url("/assets/swimming-road-featured.jpg")
    background-color #464646
    background-repeat no-repeat
    background-attachment inherit
    background-position center center
    -webkit-background-size cover
    background-size cover
    box-shadow inset 0 0 250px 0 rgba(0, 0, 0, .75)
    width 100%
    height 100%

.article-caption
  text-align center
  margin-top $article-margin

.article-text
  margin-top $article-margin
  font-size 1.4rem
  &.__head-text
    font-size 1.5rem
  &+&
    margin-top 0
  &:last-child
    margin-bottom @margin-top

.article-image
  &__image
    width 100%
  &__description
    margin-top 5px
    text-align center
    font-size 1.4rem
    color #7c868b

.article-blockquote
  text-align center
  &__content
    display inline
    font-size: 4rem
    background-color #68f3c8
    background-size 50px 62px
    background-image linear-gradient(white 70%, transparent 70%, transparent)
    -webkit-box-decoration-break clone

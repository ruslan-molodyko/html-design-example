$article-margin = 50px
$article-wrapper-padding = 15px
$article-content-width = 600px

.article
  &__wrapper
    padding $article-wrapper-padding
    margin auto
    max-width $article-content-width

.article-head-block
  position relative
  width 100%
  height 100vh
  text-align center
  vertical-align middle

  &__image
    background-image url("/assets/image/swimming-road-featured.jpg")
    background-color #464646
    background-repeat no-repeat
    background-attachment inherit
    background-position center center
    -webkit-background-size cover
    background-size cover
    box-shadow inset 0 0 250px 0 rgba(0, 0, 0, .75)
    width 100%
    height 100%

.article-caption
  text-align center
  margin-top $article-margin
  &.__no-margin
    margin-top 0
  &.__big-head-text
    font-size 30px
    margin-top 10px
    margin-bottom @margin-top * 3
    .article-caption__item-top, .article-caption__item-middle
      background-image linear-gradient(transparent 23%, transparent 60%, rgba(0, 0, 0, .5) 55%, rgba(0, 0, 0, .5) 100%, transparent 100%, transparent 100%)
      background-size 100% 100%
      display inline
      color #f7f7f7
      word-break break-all
      &:after
        content ''
        display block
        width 100%
    .article-caption__item-top
      font-family 'Droid Serif', serif
      font-style normal
      font-size 10rem
    .article-caption__item-middle
      font-family: 'Permanent Marker', cursive;
      font-size 10rem
  &.__text
    margin auto
    color #fff
    font-size 1.4rem
  &.__categories-text
    color #fff
    &.__dark-background
      color #000
    font-size 1.4rem
    .article-caption__category
      display inline-block
      &:after
        content '-'
        display inline-block
        margin 0 10px
        width 10px
    .article-caption__date
      display inline-block

.article-text
  margin-top $article-margin
  font-size 1.4rem
  &.__head-text
    font-size 1.5rem
  &+&
    margin-top 0
  &:last-child
    margin-bottom @margin-top

.article-image
  &__image
    width 100%
  &__description
    margin-top 5px
    text-align center
    font-size 1.4rem
    color #7c868b

.article-blockquote
  text-align center
  padding $article-wrapper-padding
  &__content
    display inline
    font-size: 4rem
    background-color #68f3c8
    background-size 50px 62px
    background-image linear-gradient(white 70%, transparent 70%, transparent)
    -webkit-box-decoration-break clone
